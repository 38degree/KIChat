# .env.example — Kopiere als .env und fülle die Werte aus
# cp .env.example .env

# --- PFLICHT: HuggingFace Token ---
HF_TOKEN=hf_YOUR_TOKEN_HERE

# --- LLM (Qwen 2.5 72B-Instruct, NVFP4-quantisiert) ---
LLM_MODEL=Qwen/Qwen2.5-72B-Instruct
LLM_QUANTIZATION=fp4
LLM_MAX_MODEL_LEN=8192
LLM_GPU_MEMORY_UTILIZATION=0.45

# --- Sprache ---
STT_LANGUAGE=de
TTS_LANGUAGE=de

# --- Ports ---
WEBUI_PORT=3000
BACKEND_PORT=8080
LLM_PORT=8000
TTS_PORT=8001
DENOISER_PORT=8002
OCR_PORT=8003

# --- RAG ---
RAG_CHUNK_SIZE=512
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
